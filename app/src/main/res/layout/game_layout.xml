<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="356dp"
    android:layout_height="495dp"
    tools:context="com.vpdev.ajp.vachetaureaugame.LoginActivity"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="35dp"
           android:id="@+id/textView_host_name"
           android:textAlignment="center"
           android:textColor="@color/colorPrimary"
           android:textSize="30dp"


           />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_vt"
            android:textSize="30dp"
            android:inputType="textCapCharacters"
            android:hint="Game not yet started"
            android:textColorHint="@color/Abderahmen"
            android:textColor="@color/Abderahmen"
            android:textAlignment="center"

            android:layout_below="@+id/textView_host_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />




    <Button
        android:id="@+id/button_submit_number"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Submit Number"

        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="406dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
    android:id="@+id/editText_number"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
        android:textSize="30dp"

        android:hint="Game not yet started"
        android:textColor="@color/Abderahmen"
        android:textColorHint="@color/Abderahmen"
        android:textAlignment="center"

        tools:layout_editor_absoluteX="44dp"
    tools:layout_editor_absoluteY="325dp"

        android:layout_above="@+id/button_submit_number" />

    <Button
    android:id="@+id/button_submit_vt"
    android:layout_width="150dp"
    android:layout_height="50dp"
        android:layout_gravity="center"
    android:text="Submit VT"
    tools:layout_editor_absoluteX="103dp"
    tools:layout_editor_absoluteY="119dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/editText_vt"
        android:layout_alignLeft="@+id/button_submit_number"
        android:layout_alignStart="@+id/button_submit_number" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@mipmap/image"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/textView_client_name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"

            android:layout_above="@+id/editText_number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
